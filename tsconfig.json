{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": ["*.js", "lib/**/*.js", "tests/**/*.js"],
	"exclude": ["node_modules", "tests"]
}
