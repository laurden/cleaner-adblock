{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": ["*.js", "build/**/*"],
	"exclude": ["backup", "build", "coverage", "node_modules"]
}